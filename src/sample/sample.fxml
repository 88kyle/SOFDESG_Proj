<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <AnchorPane prefHeight="670.0" prefWidth="725.0">
         <children>
            <HBox prefHeight="25.0" prefWidth="725.0">
               <children>
                  <TextField fx:id="nameBox" onAction="#addItem" prefHeight="25.0" prefWidth="326.0" />
                  <Button fx:id="add" mnemonicParsing="false" onAction="#addItem" text="Add" />
                  <ComboBox fx:id="combo" onAction="#showItem" prefHeight="25.0" prefWidth="361.0" promptText="Choose Component" />
               </children>
            </HBox>
            <AnchorPane fx:id="displayPane" layoutY="25.0" prefHeight="642.0" prefWidth="725.0" />
         </children>
      </AnchorPane>
   </children>
</GridPane>
